{
  "name": "jm-castle-warehouse-server",
  "version": "0.2.0",
  "type": "module",
  "main": "dist/index.mjs",
  "private": false,
  "scripts": {
    "prebuild": "eslint \"./src/**\"",
    "build": "tsc --project tsconfig.json",
    "start": "node --experimental-modules ./dist/index.mjs",
    "dev": "nodemon --ext '*.mts' -x \"npm run build && npm run start \"",
    "dev:serve": "cross-env NODE_ENV=development ts-node-dev --inspect=9229 --nolazy --respawn ./src -r ts-node/register src/."
  },
  "peerDependencies": {
    "jm-castle-warehouse-types": "^0.x"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jm-castle-warehouse-types": "^0.2.9",
    "luxon": "^3.0.4",
    "mariadb": "^3.0.1",
    "morgan": "~1.9.1",
    "node-fetch": "^3.2.10",
    "nodemailer": "^6.8.0",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/http-errors": "1.8.2",
    "@types/luxon": "^3.0.1",
    "@types/morgan": "1.9.3",
    "@types/nodemailer": "^6.4.6",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
